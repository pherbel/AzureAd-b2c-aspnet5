{
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Verbose",
      "System": "Information",
      "Microsoft": "Information"
    }
  },

  "AzureADSettings": {
    "ClientId": "[Your clientid]",
    "Tenant": "[Your tenant e.g.: cotoso.onmicrosoft.com]",
    "AadInstance": "https://login.microsoftonline.com/{0}{1}{2}", // This is the public instance of Azure AD
    "PostLogoutRedirectUri": "http://localhost:5000/",
    "RedirectUri": "http://localhost:5000/",
    "SignUpPolicyId": "B2C_1_SignUp",
    "SignInPolicyId": "B2C_1_SignIn",
    "UserProfilePolicyId": "B2C_1_Profile"
  }

}
